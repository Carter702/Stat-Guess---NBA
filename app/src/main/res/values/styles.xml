<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="colorControlHighlight">@color/materialWhite</item>
    </style>

    <style name="ButtonView">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <style name="GameStatLabels">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/materialWhite</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RadioButton">
        <item name="android:scaleY">1.3</item>
        <item name="android:scaleX">1.3</item>
        <item name="android:buttonTint">@color/materialOrange</item>
        <item name="android:clickable">true</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <style name="Spinner">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:radius">30dp</item>
    </style>

</resources>
